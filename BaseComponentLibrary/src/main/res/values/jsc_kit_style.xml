<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customToastWindowAnimations" parent="android:Animation.Toast">
        <item name="android:windowEnterAnimation">@anim/custom_toast_anim_in</item>
        <item name="android:windowExitAnimation">@anim/custom_toast_anim_out</item>
    </style>

    <style name="LoadingDialog" parent="@style/Theme.AppCompat.Dialog">
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>